<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<!-- 必须引入图标库，否则 FontIcon 会报错 -->
<?import org.kordamp.ikonli.javafx.*?>

<HBox fx:id="root" prefHeight="400.0" prefWidth="600.0" stylesheets="@css/view/video-view.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.knifer.freebox.controller.VideoController">
   <children>
      <VBox spacing="15.0" BorderPane.alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="movieTitleLabel" wrapText="true" styleClass="fs-large">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="collectBtn" focusTraversable="false" mnemonicParsing="false" onAction="#onCollectBtnAction" />
                     </children>
                  </HBox>
                  <SplitPane fx:id="videoDetailSplitPane" dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" VBox.vgrow="ALWAYS">
                     <items>
                        <!-- 上半部分：详情介绍 -->
                        <TextFlow fx:id="movieDetailsTextFlow" lineSpacing="5.0" styleClass="video-details-prop">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </TextFlow>

                        <!-- 下半部分：按钮 + 选集列表 -->
                        <VBox spacing="5.0">
                           <padding>
                              <Insets top="5.0" left="5.0" right="5.0"/>
                           </padding>
                           <children>
                              <!-- 【新增】PotPlayer 按钮 -->
                              <Button fx:id="openInPotPlayerBtn"
                                      text="使用 PotPlayer 播放"
                                      onAction="#onOpenInPotPlayerBtnAction"
                                      maxWidth="Infinity"
                                      style="-fx-background-color: #DAA520; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                                 <graphic>
                                    <FontIcon iconLiteral="fa-external-link:14:white"/>
                                 </graphic>
                                 <tooltip>
                                    <Tooltip text="点击停止当前内置播放，转为使用 PotPlayer 打开"/>
                                 </tooltip>
                              </Button>

                              <!-- 原有的 TabPane，加上 Vgrow 让它占满剩余空间 -->
                              <TabPane fx:id="resourceTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </items>
                  </SplitPane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>